.setting-box.text-center
    i.fa.fa-gear.fa-lg.toggle-setting
    .settings-content
        .option-box.color-options
            h4 Color
            - var themes = ["green-theme" , "red-theme" , "blue-theme" ,"black-theme"]
            ul.list-unstyled
                each theme in themes 
                    li(data-theme=theme)
        .option-box.font-options
            h4 Fonts
            - var fonts = ["Sans-font" , "Roboto-font" , "Neon-font" ]
            select.form-select
                each font in fonts
                    option(value=font)=font
        .option-box             
            h4 Sidebar 1 
